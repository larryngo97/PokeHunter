<resources>
    <style name="HomeTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">#f2f2f2</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="cardBackgroundColor">@color/cardBackgroundColor</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="buttonStyle">@style/ButtonNormalTheme</item>
    </style>

    <style name="HomeThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">#005E5E</item>
        <item name="backgroundColor">#303030</item>
        <item name="cardBackgroundColor">#424242</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="buttonStyle">@style/ButtonNormalTheme</item>
    </style>

    <style name="HomeTabLayoutTheme" parent="android:Widget">
        <item name="tabSelectedTextColor">@color/tabSelectedColor</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ButtonNormalTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:backgroundTint">@color/box_button</item>
        <item name="android:textColor">@color/buttonTextColorPrimary</item>
    </style>


    <style name="ButtonConfirmTheme" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">5dp</item>
        <item name="android:backgroundTint">@color/buttonBackgroundColorSecondary</item>
        <item name="colorOnPrimary">@color/buttonTextColorSecondary</item>

    </style>

    <style name="PreferenceStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>

    <style name="SearchViewTheme">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#5000</item>
    </style>

    <style name="ActionBarImageButtons">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>