<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/counter_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/HomeTheme"
    android:orientation="vertical"
    android:background="@color/backgroundSecondary"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_options"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/circle_button"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_arrow_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageButton>

        <ImageButton
            android:id="@+id/button_undo"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_button"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_undo">

        </ImageButton>

        <FrameLayout
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <ImageButton
                android:id="@+id/button_increment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_button">

            </ImageButton>

            <TextView
                android:id="@+id/button_icrement_text"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:gravity="center"
                android:fontFamily="@font/mazzard_light"
                android:maxLines="1"
                android:text="+999"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="32sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform">

            </TextView>

        </FrameLayout>


        <ImageButton
            android:id="@+id/button_editcount"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_button"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_hashtag">

        </ImageButton>

        <ImageButton
            android:id="@+id/button_edithunt"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_button"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_edit">

        </ImageButton>

        <ImageButton
            android:id="@+id/button_claim"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_button"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_check">

        </ImageButton>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/counter_image_frame"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/box_hunt_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/counter_image_platform"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/platform" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/counter_image_pokemon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/counter_image_platform"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="-45dp"
                android:src="@drawable/missingno">

            </pl.droidsonroids.gif.GifImageView>

        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/counter_pokemon_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:translationY="30dp"
        android:background="@drawable/box_hunt_info"
        android:fontFamily="@font/mazzard"
        android:gravity="center"
        android:padding="5dp"
        android:text="Lugia"
        android:textColor="@color/textColorPrimary"
        android:textSize="48sp"
        app:autoSizeMaxTextSize="96sp"
        app:autoSizeMinTextSize="24sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/counter_image_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>

    <TextView
        android:id="@+id/pokemon_count"
        android:background="@drawable/box_hunt_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:translationY="-30dp"
        android:fontFamily="@font/mazzard_light"
        android:gravity="center"
        android:text="999999"
        android:textColor="@color/textColorPrimary"
        android:textSize="48sp"
        app:autoSizeMaxTextSize="96sp"
        app:autoSizeMinTextSize="24sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counter_image_frame" />

</androidx.constraintlayout.widget.ConstraintLayout>