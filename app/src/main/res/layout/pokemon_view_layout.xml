<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <FrameLayout
            android:id="@+id/frame_pokemon_view_image"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/pokemon_view_image"
                android:background="@drawable/box_recycler"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pokemon_view_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="#000"
                app:autoSizeMaxTextSize="50sp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeTextType="uniform"
                app:autoSizeStepGranularity="2sp"
                android:textColor="@color/dark_gray">
            </TextView>

            <TextView
                android:id="@+id/pokemon_view_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="start"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="start"
                android:textColor="@color/black"
                android:maxLines="1"
                app:autoSizeMaxTextSize="50sp"
                app:autoSizeMinTextSize="32sp"
                app:autoSizeTextType="uniform"
                app:autoSizeStepGranularity="2sp">

            </TextView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_gravity="start"
                android:layout_width="150dp"
                android:layout_height="25dp">

                <TextView
                    android:id="@+id/pokemon_view_type1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/type_fire"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.8"
                    android:shadowDy="1.5"
                    android:shadowRadius="2.5"
                    android:text="Fire"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    app:autoSizeMaxTextSize="50sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeStepGranularity="2sp">

                </TextView>

                <TextView
                    android:id="@+id/pokemon_view_type2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/type_flying"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.8"
                    android:shadowDy="1.5"
                    android:shadowRadius="2.5"
                    android:text="Flying"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    app:autoSizeMaxTextSize="50sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeStepGranularity="2sp">

                </TextView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/pokemon_view_button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/box_start"
        android:foreground="?attr/selectableItemBackground"
        android:layout_gravity="center"
        android:text="Confirm"
        android:textColor="@color/white"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeTextType="uniform"
        app:autoSizeStepGranularity="2sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_height="2dp"
        android:background="@color/light_blue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Select Icon"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:autoSizeMaxTextSize="50sp"
        app:autoSizeMinTextSize="32sp"
        app:autoSizeTextType="uniform"
        app:autoSizeStepGranularity="2sp" >

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pokemon_view_recycler"
        android:background="@drawable/box_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>